conky.config = {
  update_interval=1.0,
  use_spacer='none',
  -- settings for use with dzen
  background=false,
  out_to_console=true,
  out_to_x=false,
}

-- Examples of conkyrc.cputemp:
-- On Arch or Ubuntu 12.10+:
--   ${platform coretemp.0 temp 2}
-- On Ubuntu 12.04-:
--   ${acpitemp}
-- Other:
--   ${hwmon 0 temp 4}
--
-- Example of conkyrc.disks (remove the line breaks):
--   / ${fs_used_perc /}% (${diskio /dev/sda})^pa(380)
--   /var ${fs_used_perc /var}%
--   /home ${fs_used_perc /home}%
--   (${diskio /dev/sdb})^pa(550)
--
-- Example of conkyrc.mail
-- Personal and Work email counts (remove the line breaks):
--   p(${new_mails $HOME/mail/personal/INBOX})
--   w(${new_mails $HOME/mail/work/INBOX})
-- Single email account:
--   ${new_mails $HOME/mail/personal/INBOX}
--
-- Example of conkyrc.audio
--  OSS version
--    ${if_mixer_mute}
--      ^i($HOME/.dzen/icons/vol-mute.xbm)
--    ${else}
--      ^i($HOME/.dzen/icons/vol.xbm) ${mixer}%
--    ${endif}
--  Pulse audio version:
--    ^i($HOME/.dzen/icons/vol.xbm)
--    ${execp amixer get Master | (grep -m 1 'Playback .*[\d\+%]] \[on\]' || echo "0%") | sed 's/.*\[\([0-9]\+\)%\].*/\1%/'}

conky.text = [[
^i($HOME/.dzen/icons/cpu.xbm)^pa(15)${if_match $cpu >= 60}${if_match $cpu >= 80}^fg(\#cf6171)$cpu%^fg()${else}^fg(\#ff8700)$cpu%^fg()${endif}${else}$cpu%${endif} ${freq_g}g ${if_existing /home/ervandew/.dzen/conkyrc.cputemp}${execp cat $HOME/.dzen/conkyrc.cputemp}Â°^pa(100) ${endif}| ^i($HOME/.dzen/icons/mem.xbm) ${if_match $memperc >= 80}^fg(\#cf6171)$memperc%^fg()${else}$memperc%${endif} ^pa(150)${if_gw} | ${execp $HOME/.dzen/_conkyrc.network} ${endif}| ${if_existing /home/ervandew/.dzen/conkyrc.disks}${execp cat $HOME/.dzen/conkyrc.disks}${else}/ ${fs_used_perc /}% (${diskio})${endif}${if_existing /home/ervandew/.dzen/conkyrc.audio}| ${execp cat $HOME/.dzen/conkyrc.audio}${endif}${if_existing /sys/class/power_supply/BAT0} | ^i($HOME/.dzen/icons/bat.xbm) ${if_match ${battery_percent} <= 50}^fg(\#cf6171)${battery_percent}%^fg()${else}${battery_percent}%${endif}${endif}${if_existing /home/ervandew/.dzen/conkyrc.vpn}${execp cat $HOME/.dzen/conkyrc.vpn}${endif}${if_existing /home/ervandew/.dzen/conkyrc.backup} | ${execp cat $HOME/.dzen/conkyrc.backup}${endif} | ${tztime UTC %m/%d %H:%M UTC} | ^fg(\#5884b0)${time %a %b %d %H:%M }
]]
